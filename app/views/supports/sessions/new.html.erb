<div class="row">
  <div class="col s12 m10 l4 offset-m1 offset-l4">
    <h4 class="teal-text center">Log in</h4>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="row">
        <div class="col s12">
          <%= f.input :email, required: false, autofocus: true, placeholder: 'Please enter your email' %>
        </div>
        <div class="col s12">
          <%= f.input :password, required: false %>
        </div>
      </div>
    </div>

    <div class="form-actions bottom-pad-button">
      <%= f.button :submit, "Log in" %>
      <div class="right">
        <%= link_to "Sign Up", new_support_registration_path, class: 'waves-effect waves-teal btn-flat flat-button' %>
      </div>
    </div>
    <% end %>

    <%= render "supports/shared/links" %>
  </div>
</div>
