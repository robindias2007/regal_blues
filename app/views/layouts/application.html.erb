<!DOCTYPE html>
<html>
  <head>
    <title>RegalBlues</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>

    <div class="container">
      <p class="hide">
        <% flash.each do |key, message| %>
          <%= message %>
        <% end %>
      </p>

      <%= yield %>

      <%= render 'shared/flash_messages' %>
  </body>
</html>
