<div class="vertical-spacer-5"></div>

<div class="row">
  <%= simple_form_for :search, url: support_order_search_path, method: :get do |f| %>
    <div class="col s11">
      <%= f.input :query, input_html: { placeholder: 'Search for orders. Enter order ID', autocomplete: 'off', class: 'autocomplete', id: 'js-order-autocomplete' }, label: false %>
    </div>
    <div class="col s1">
      <button class="btn-floating waves-effect waves-light center">
        <i class="material-icons prefix">search</i>
      </button>
    </div>
  <% end %>
</div>

<div class="vertical-spacer-5"></div>

<% if @data %>
  <div class="row">
    <% @data.each do |key, value|  %>
    <div class="col s12 m6 l4">
      <div class="card">
        <div class="card-content teal lighten-2 white-text">
          <p class="card-stats-title center"> <%= key.to_s.humanize %> </p>
          <h4 class="card-stats-number center"><%= value %></h4>
        </div>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
