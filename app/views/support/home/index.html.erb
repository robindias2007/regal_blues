<div class="vertical-spacer-5"></div>

<div class="row">
  <%= simple_form_for :search, url: support_user_search_path, method: :get do |f| %>
    <div class="col s11">
      <%= f.input :query, input_html: { placeholder: 'Search for users by name or email', autocomplete: 'off', class: 'autocomplete', id: 'js-user-autocomplete' }, label: false %>
    </div>
    <div class="col s1">
      <button class="btn-floating waves-effect waves-light center">
        <i class="material-icons prefix">search</i>
      </button>
    </div>
  <% end %>
</div>

<div class="vertical-spacer-5"></div>

<div class="row">
  <%= simple_form_for :search, url: support_designer_search_path, method: :get do |f| %>
    <div class="col s11">
      <%= f.input :query, input_html: { placeholder: 'Search for designers by name or email', autocomplete: 'off', class: 'autocomplete', id: 'js-designer-autocomplete' }, label: false %>
    </div>
    <div class="col s1">
      <button class="btn-floating waves-effect waves-light center">
        <i class="material-icons prefix">search</i>
      </button>
    </div>
  <% end %>
